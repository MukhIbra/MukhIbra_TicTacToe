<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background">

    </ImageView>

    <ImageView
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/player_x_y"
        app:layout_constraintBottom_toTopOf="@id/game_board"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player_x_y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player X"
        android:textAlignment="center"
        android:textColor="#0734AC"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/button"
        app:layout_constraintTop_toTopOf="@id/button" />


    <ImageView
        android:id="@+id/game_board"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_marginTop="130dp"
        android:scaleType="centerCrop"
        android:src="@drawable/game_board"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </ImageView>


    <ImageView
        android:id="@+id/one"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:paddingTop="15dp"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/two"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/game_board"
        app:layout_constraintTop_toTopOf="@id/game_board" />

    <ImageView
        android:id="@+id/two"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:paddingTop="15dp"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/three"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/one"
        app:layout_constraintTop_toTopOf="@id/game_board" />

    <ImageView
        android:id="@+id/three"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:paddingTop="15dp"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@id/game_board"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/two"
        app:layout_constraintTop_toTopOf="@id/game_board" />

    <ImageView
        android:id="@+id/four"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:paddingTop="15dp"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/five"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/game_board"
        app:layout_constraintTop_toBottomOf="@+id/one" />

    <ImageView
        android:id="@+id/five"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:paddingTop="15dp"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/six"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/four"
        app:layout_constraintTop_toBottomOf="@+id/two" />

    <ImageView
        android:id="@+id/six"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:paddingTop="15dp"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@id/game_board"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/five"
        app:layout_constraintTop_toBottomOf="@+id/three" />

    <ImageView
        android:id="@+id/seven"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:paddingTop="15dp"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/eight"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/game_board"
        app:layout_constraintTop_toBottomOf="@+id/four" />

    <ImageView
        android:id="@+id/eight"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:paddingTop="15dp"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/nine"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/seven"
        app:layout_constraintTop_toBottomOf="@+id/five" />

    <ImageView
        android:id="@+id/nine"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:paddingTop="15dp"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@id/game_board"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/eight"
        app:layout_constraintTop_toBottomOf="@+id/six" />

    <View
        android:id="@+id/view"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginVertical="20dp"
        android:background="#59000000"
        app:layout_constraintBottom_toBottomOf="@+id/seven"
        app:layout_constraintEnd_toStartOf="@+id/two"
        app:layout_constraintStart_toEndOf="@+id/one"
        app:layout_constraintTop_toTopOf="@+id/one" />

    <View
        android:id="@+id/view2"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginVertical="20dp"
        android:background="#59000000"
        app:layout_constraintBottom_toBottomOf="@+id/seven"
        app:layout_constraintEnd_toStartOf="@+id/three"
        app:layout_constraintStart_toEndOf="@+id/two"
        app:layout_constraintTop_toTopOf="@+id/one" />

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginHorizontal="20dp"
        android:background="#59000000"
        app:layout_constraintBottom_toBottomOf="@+id/two"
        app:layout_constraintEnd_toEndOf="@+id/three"
        app:layout_constraintStart_toStartOf="@+id/one"
        app:layout_constraintTop_toBottomOf="@+id/two" />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginHorizontal="20dp"
        android:background="#59000000"
        app:layout_constraintBottom_toTopOf="@+id/eight"
        app:layout_constraintEnd_toEndOf="@+id/three"
        app:layout_constraintStart_toStartOf="@+id/one"
        app:layout_constraintTop_toTopOf="@+id/eight" />


    <TextView
        android:id="@+id/player_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@id/view5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_board"
        app:layout_constraintTop_toTopOf="@id/view5" />

    <TextView
        android:id="@+id/point_player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/view5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_1" />


    <View
        android:id="@+id/view5"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:layout_marginVertical="50dp"
        android:background="#06249A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_board" />

    <TextView
        android:id="@+id/player_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view5"
        app:layout_constraintTop_toBottomOf="@id/game_board"
        app:layout_constraintTop_toTopOf="@id/view5" />

    <TextView
        android:id="@+id/point_player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/view5"
        app:layout_constraintTop_toBottomOf="@id/player_2" />

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/winner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B7464647" />

    <ImageView
        android:id="@+id/startNewGame"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/button_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.369"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/repeate"
        app:layout_constraintTop_toTopOf="@id/startNewGame"
        app:layout_constraintBottom_toBottomOf="@id/startNewGame"
        app:layout_constraintStart_toStartOf="@id/startNewGame"
        app:layout_constraintEnd_toEndOf="@id/startNewGame"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
